  If separator >= 2 And separator <> Len(txtBoxInfo.Text) Then
    lNum = Left(txtBoxInfo.Text, separator - 1)
    rNum = Mid(txtBoxInfo.Text, separator + 1, Len(txtBoxInfo.Text))
    If txtBoxCommand.Text = "Sumar" Or txtBoxCommand.Text = "sumar" Then 
